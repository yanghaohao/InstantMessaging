<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.example.message.vm.ChatViewModel" />
        <variable
            name="msgItem"
            type="com.example.data.bean.MessageItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.commen.view.ActionBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/action_bar"
            app:actionBarName="@{msgItem.friendUserName}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/qq_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:imeOptions="actionSend" />

            <Button
                android:id="@+id/send"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_send"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:onClick="@{()->vm.sendMessage(edit.text.toString())}"
                android:text="@string/send" />

        </LinearLayout>


    </LinearLayout>
</layout>